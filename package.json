{
  "name": "react-components-monorepo",
  "author": "Yu-Xuan Zheng",
  "keywords": [
    "react components"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jason89521/react-components-monorepo"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "commit": "cz",
    "test": "pnpm -r --filter ./packages/* run test",
    "dev:website": "pnpm --filter ./website dev",
    "build:website": "pnpm --filter ./website run build",
    "build:packages": "pnpm -r --filter ./packages/* run build:package",
    "prepublishOnly": "pnpm build:lib"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.23.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.3",
    "typescript": "^4.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.0.20",
      "@types/react-dom": "^18.0.6",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "vite": "^3.1.3",
      "@vitejs/plugin-react": "^2.1.0",
      "typescript": "^4.8.3"
    }
  }
}
